#include <stdio.h>

#include "types.h"
#include "methods.h"

int main(int argc, char **argv) {
    FILE* fp = NULL;

    if (argc == 2) {
        fp = fopen(argv[1], "rb");
    }

    else {
        printf("Please specify path to a WAV file.");
        return 1;
    }


    if (!is_RIFF_format(fp)) {
        printf("The specified file is not a RIFF WAVE file.");
        return 1;
    }


    WavFile wav = read_wav(fp);
    print_header(wav);

    fclose(fp);

    return 0;
}
